{
	"name": "ionic-configuration-service",
	"version": "0.0.0-development",
	"description": "Configuration functionalities for apps built with Ionic framework",
	"author": {
		"name": "Markus Wagner",
		"email": "markus.wagner02@web.de"
	},
	"repository": "https://github.com/Ritzlgrmft/ionic-configuration-service.git",
	"license": "MIT",
	"private": false,
	"keywords": [
		"ionic",
		"mobile",
		"configuration",
		"environizing"
	],
	"scripts": {
		"build": "npm run clean && npm run compile",
		"clean": "cd dist && ls | grep -v .npmignore | xargs rm && cd .. && rm -r aot",
		"commit": "git-cz",
		"compile": "ngc -p tsconfig.aot.json",
		"karma": "karma start karma.conf.js --browsers Chrome",
		"karma-once": "karma start karma.conf.js --browsers PhantomJS --single-run",
		"lint": "tslint --project tsconfig.json --format verbose --exclude \"**/*.spec.ts\"",
		"report-coverage": "codecov",
		"semantic-release": "semantic-release pre && npm publish && semantic-release post",
		"test": "npm run compile && npm run lint && npm run karma-once"
	},
	"files": [
		"dist",
		"src"
	],
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"peerDependencies": {
		"@angular/core": "^5.0.0",
		"@angular/http": "^5.0.0",
		"rxjs": "^5.5.2",
		"zone.js": "^0.8.18"
	},
	"devDependencies": {
		"@angular/common": "5.0.0",
		"@angular/compiler": "5.0.0",
		"@angular/compiler-cli": "5.0.0",
		"@angular/core": "5.0.0",
		"@angular/forms": "5.0.0",
		"@angular/http": "5.0.0",
		"@angular/platform-browser": "5.0.0",
		"@angular/platform-browser-dynamic": "5.0.0",
		"rxjs": "5.5.2",
		"zone.js": "0.8.18",
		"@types/jasmine": "2.8.2",
		"babel-polyfill": "6.26.0",
		"codecov": "3.0.0",
		"codelyzer": "4.0.1",
		"commitizen": "2.9.6",
		"cz-conventional-changelog": "2.1.0",
		"jasmine-core": "2.8.0",
		"karma": "1.7.1",
		"karma-chrome-launcher": "2.2.0",
		"karma-jasmine": "1.1.0",
		"karma-phantomjs-launcher": "1.0.4",
		"karma-typescript": "3.0.8",
		"reflect-metadata": "0.1.10",
		"requirejs": "2.3.5",
		"tslint": "5.8.0",
		"typescript": "2.4.2",
		"semantic-release": "8.2.0"
	},
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	}
}
